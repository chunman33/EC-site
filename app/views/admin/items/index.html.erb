<div class="container">
  <div class="row">
    <div class="ml-auto">
      <%= link_to new_admin_item_path do%>
        <i class="fa-solid fa-circle-plus fa-3x"></i>
      <% end %>
    </div>
    </div>
  </div>
  <div class="row text-center">
    <div class="col">
      <table class="table">
        <thead>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.excluding_tax_price %></td>
          <td><%= item.genre.name %></td>
          <% if item.sale_status == true %>
              <td style="color:#00FF00">販売中</td>
              <% else %>
              <td style="color:#C0C0C0">販売停止中</td>
              <% end %>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>