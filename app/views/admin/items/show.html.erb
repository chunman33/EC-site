<div class="container">
  <div class="row">
    <div class="col">
      
      <tabel>
        <tbody>
          <td></td>
          <td><%= @item.image %></td>
          <tr><td>商品名</td><td><%= @item.name%></td></tr>
          <tr><td>商品説明</td><td><%= @item.description%></td></tr>
          <tr><td>ジャンル</td><td><%= @item.genre.name%></td></tr>
          <tr><td>税込価格(税抜価格)</td><td><%= @item.excluding_tax_price %></td></tr>
          <tr><td>販売ステータス</td>
            <% if %>
             <%= @item.sale_status = true %>
               <td style ="color:#00FF00">販売中</td>
            <% else %>
              <td style ="color:#C0C0C0">販売停止中</td>
            <% end %>
          </td></tr>
        </tbody>
      </tabel>
      <div>
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success"%>
      </div>
    </div>
  </div>
</div>