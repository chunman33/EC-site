<div class ="container">
  <div class ="row">
    <div class ="col-md-6">
      
      <%= form_with model: Genre.new , url: admin_genres_path do |f| %>
      
      <div>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
      
      <% end %>
      
      <table class = "table">
        <thead>
          <th>ジャンル</th>
        </thead>

        <tbody>
          
        <% @genres.each do |genre| %>
          <tr><td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success"%> </td>
          </tr>
          
        <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>