<div class="container">
  <div class="row">
    <div class="col">
      <h5>注文履歴一覧</h5>
    </div>
  </div>
  
  <div class="row text center">
    <div class="col">
      <table class="table">
        <thead>
          <th bgcolor="#EEEEEE">購入日時</th>
          <th bgcolor="#EEEEEE">購入者</th>
          <th bgcolor="#EEEEEE">注文個数</th>
          <th bgcolor="#EEEEEE">注文ステータス</th>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <td><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
          <td><%= order.name %></td>
          <td><%= order.get_total_quantity %></td>
          <td><%= order.payment_status_i18n %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>