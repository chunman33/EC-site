<div class="container">
  <div class="row">
    <h5>注文履歴詳細</h5>
  </div>
  
  <div class="row">
    <div class="col">
      <table>
        <tr>
          <td>購入者</td>
          <td><%= @order_detail.order.name %></td>
        </tr>
        <tr>
          <td>注文日</td>
          <td><%= @order_detail.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            <%= @order_detail.order.post_code %>
            <%= @order_detail.order.address %>
            <%= @order_detail.order.name %>
          </td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>注文ステータス</td>
          <td><%= %></td>
        </tr>
      </table>
      <table class="table">
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </thead>
        <tbody>
          <td><%= @order_detail.item.name %></td>
          <td><%= @order_detail.item.add_tax_price.to_s(:delimited)%></td>
          <td><%= @order_detail.quantity %></td>
          <td><%= @order_detail.total_price.to_s(:delimited)%></td>
          <td><%= %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>