<div class="container">
 <div class="row mt-3 mb-3">
  <div class = "col-lg-1">
   <h6><strong>登録情報</strong></h6>
  </div>
 <div class = "col-lg-4">
  <%= link_to "編集する", customers_edit_path, class: "btn btn-success" %><!--btn-successは緑ボタン-->
 </div>
 </div>
 
 <div class="row">
  <div class="col-lg-12">
  
    <table border="1", style="border-collapse: collapse" cellPadding="10">
       <!--border="１"で表に二重の枠線を作り、border-collapseプロパティをcollapseに修正することで二重線を1つに。-->
       <tr> 
        <th bgcolor="#EEEEEE" colspan="3">氏名</th>
         <td width="80%" colspan="3"><%= @customer.last_name %>
             <%= @customer.first_name %></td>
       </tr>
       <tr> 
        <th bgcolor="#EEEEEE">カナ</th>
        <td colspan="3"><%= @customer.last_name_kana %>
            <%= @customer.first_name_kana %></td>
       </tr>
       <tr> 
        <th bgcolor="#EEEEEE">郵便番号</th>
        <td colspan="3"><%= @customer.postcode %></td>
       </tr>
       <tr> 
        <th bgcolor="#EEEEEE">住所</th>
        <td colspan="3"><%= @customer.address %></td>
       </tr>
       <tr> 
        <th bgcolor="#EEEEEE">電話番号</th>
        <td colspan="3"><%= @customer.phone_number %></td>
       </tr>
       <tr> 
        <th bgcolor="#EEEEEE">メールアドレス</th>
        <td colspan="3"><%= @customer.email %></td>
       </tr>
      
      </table>
  </div>
 </div>
 
 <div class="row mt-4 mb-3">
  <div class = "col-lg-1">
 <strong>配送先</strong>
  </div>
  <div class = "col-lg-4">
   <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
   </div>
  </div>
 
 <div class="row">
  <div class = "col-lg-1">
   <strong>注文履歴</strong>
  </div>
 <div class = "col-lg-4">
  <%= link_to "一覧を見る", "#_path", class: "btn btn-primary" %>
 </div>
 </div>
</div>


