<div class="container">
 <div class="row">
  <div class=col-md-10 >
　　<h4>会員情報編集</h4>

<% if @customer.errors.any? %>
 <% @customer.errors.full_messages.each do |msg| %>
  <%= msg %>
 <% end %>
<% end %>

 <%= form_with model: current_customer, url: customers_update_path do |f| %>
 <div>
 <%= f.label :氏名, class: "col-md-3" %>
 <%= f.text_field :last_name, class: "mr-5"%>
 <%= f.text_field :first_name %>
 </div>
 <div>
 <%= f.label :フリガナ, class: "col-md-3" %>
 <%= f.text_field :last_name_kana, class: "mr-5" %>
 <%= f.text_field :first_name_kana %>
 </div>
 <div>
 <%= f.label :郵便番号, class: "col-md-3" %>
 <%= f.text_field :postcode %>
 </div>
 <div>
 <%= f.label :住所, class: "col-md-3" %>
 <%= f.text_field :address %>
 </div>
 <div>
 <%= f.label :電話番号, class: "col-md-3" %>
 <%= f.text_field :phone_number %>
 </div>
 <div>
 <%= f.label :メールアドレス, class: "col-md-3" %>
 <%= f.text_field :email %>
 </div>
 
 <div class="row">
 <div class="col-md-8 offset-md-3">
 <%= f.submit "編集内容を保存", class: "btn btn-success mt-3"%>
 
 <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger mt-3 ml-5" %>
 </div>
 <% end %>
 </div>
 
 
 </div>
</div>
</div>