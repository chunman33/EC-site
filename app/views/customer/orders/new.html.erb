<div class= "container">
  <div class="row">
   
      <h5>注文情報入力画面</h5>
  </div>
  
  <div class="row">
    <div class="col">
      
     <%= form_with model: @order do |f| %>
    
      <h5><strong>支払方法</strong></h5>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
      <br>
      
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
      
      <h5><strong>お届け先</strong></h5>
      
      
      <%= f.radio_button :address, :address_display %>
      <%= f.label :address, 'ご自身の住所' %>
      <%= %>
      <br>
      <%= f.radio_button :address, :address_display %>
      <%= f.label :address, '登録済住所から選択' %><br>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display)%> <!--(モデル, :フォームで送る値(メソッド), :セレクトボックスに表示する値(メソッド)-->
      <br>
      <%= f.radio_button :address, :address_display%>
      <%= f.label :address, '新しいお届け先'%>
      <div>
      <%= f.label :郵便番号 %>
      <%= f.text_field :post_code %>
      </div>
      <div>
      <%= f.label :住所 %>
      <%= f.text_field :address %>
      </div>
      <div>
      <%= f.label :宛名 %>
      <%= f.text_field :name %>
      </div>
      
      <%= f.submit "確認画面へ進む", class: "btn btn-primary"%>
      <% end %>
      
    </div>
  </div>
</div>