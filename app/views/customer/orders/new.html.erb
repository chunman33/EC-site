<div class= "container">
  <div class="row">
   
      <h5>注文情報入力画面</h5>
  </div>
  
  <div class="row">
    <div class="col">
      
     <%= form_with model: @order, url: confirm_orders_path do |f| %>
    
      <h5><strong>支払方法</strong></h5>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %><!--銀行振り込みとクレカ決済でプロパティ名が同じpayment_methodになっているため、どちらかしか選択できないラジオボタンとなる。-->
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
      <br>
      
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
      
      <h5><strong>お届け先</strong></h5>
      
      <!--ログインユーザーの住所を選択する場合-->
      <%= f.radio_button :select_address, 0 %>
      <%= f.label :address, 'ご自身の住所' %><br>
      <%= "〒" + current_customer.postcode %>
      <%= current_customer.address %><br>
      <%= current_customer.last_name + current_customer.first_name %>
      <br>
      <!--セレクトボックス(登録済み住所)から選択する場合-->
      <%= f.radio_button :select_address, 1 %>
      <%= f.label :address, '登録済住所から選択' %><br>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address)%> <!--(モデル, :パラメータで送られる値, :ブラウザの画面に表示される値-->
      <br>
      <!--新しい住所を追加する場合-->
      <%= f.radio_button :select_address, 2 %>
      <%= f.label :address, '新しいお届け先'%>
      <div>
      <%= f.label :post_code, "郵便番号" %>
      <%= f.text_field :post_code %>
      </div>
      <div>
      <%= f.label :address, "住所"%>
      <%= f.text_field :address %>
      </div>
      <div>
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name %>
      </div>
      
      <%= f.hidden_field :postage, :value => @order.postage %><!--送料をpostageカラムに保存-->
      <%= f.submit "確認画面へ進む", class: "btn btn-primary"%>
      <% end %>
      
    </div>
  </div>
</div>