
   <h5>注文履歴一覧</h5>

      <table class="table">
        <thead>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </thead> 
        <% @orders.each do |order| %>
        <tbody>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.address %></td>
          <% order.order_details.each do |order_details| %>
          <td><%= order_details.item.name %></td>
          <% end %>
          <td><%= order.payment_price.to_s(:delimited) %></td>
          <td><%= order.payment_status_i18n %></td>
          <td><%= link_to "表示する", order_path(order), class: "btn btn-primary"%></td>
        </tbody> 
        <% end %>
      </table>
   
