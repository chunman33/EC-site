<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-1 mt-4 mb-4">
    <h5>配送先編集</h5>
    </div>
  </div>
  
   <div class="row">
    <div class="col-md-12">
    <%= form_with model: @address do |f| %>
    
    <div>
    <%= f.label :"郵便番号(ハイフンなし)", class: "col-md-3" %>
    <%= f.text_field :post_code, placeholder: "0000000"%>
    </div>
    <div>
    <%= f.label :住所, class: "col-md-3" %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size:65 %>
    </div>
    <div>
    <%= f.label :宛名, class: "col-md-3" %>
    <%= f.text_field :name, placeholder: "令和道子"%>
    
    <%= f.submit "新規登録", class: "btn btn-success col-md-1 offset-md-4" %>
    </div>
    
    <% end %>
    </div>
  </div>
</div>