<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name, "(姓)" %></br>
    <%= f.text_field :last_name, autofocus: true, placeholder: "山田" %>
  <div>
  <div class="field">
    <%= f.label :first_name, "(名)" %></br>
    <%= f.text_field :first_name, placeholder: "太朗" %>
  <div>
  <div class="field">
    <%= f.label :last_name_kana, "(セイ)" %></br>
    <%= f.text_field :last_name_kana, placeholder: "ヤマダ" %>
  <div>
  <div class="field">
    <%= f.label :first_name_kana, "(メイ)" %></br>
    <%= f.text_field :first_name_kana, placeholder: "タロウ" %>
  <div>
    
    
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %> 
    <!--placeholderで入力フォーム内に初期値として表示される文字を作成-->
  </div>
    
  <div class="field">
    <%= f.label :postcode, "郵便番号(ハイフンなし)" %></br>
    <%= f.text_field :postcode, placeholder: "00000000"%>
  </div>
    
  <div class="field">
    <%= f.label :address, "住所" %><br>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神南町0-0"%>
  <div>
    
  <div class="field">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %><br>
    <%= f.text_field :phone_number, placeholder: "00000000000" %>
  <div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>

<%= render "customer/shared/links" %>

<h2>からログインしてください</h2>
