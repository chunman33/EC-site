 <table border="1", rules="groups" cellPadding="5"><!--rules="groups"でグループの間(theadやtbody,tfoot)の罫線のみを表示する-->
      <colgroup>
        <col style="width: 200px;">
      </colgroup> 
        <thead>
            <th style="text-align: center;">ジャンル検索</th><!--中央寄せ-->
        </thead>
         <tbody>
          <% genres.each do |genre| %>
            <tr><td height="50px">
              <!--ジャンル検索機能の実装-->
              <%= link_to genre.name, items_path(genre_id: genre.id) %></td></tr>
              <!--一覧画面遷移時に引数としてgenre_idパラメータを付与し、その中にgenreモデルのidを入れる。-->
          <% end %>
        </tbody>
 </table>