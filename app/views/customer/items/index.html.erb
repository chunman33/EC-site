<div class="container">
  <div class="row mt-5">
    <div class="col-3">
   <%= render 'genre', genres: @genres %>
    </div>
  
    <div class="col-9">
      
    <h2>商品一覧</h2><h6>(全<%= @items.count{ |item| item.sale_status? == true } %>件)</h6>
    <!--countメソッドには引数を渡すことができる(ブロックでも可)ため、ブロックにしてsale_statusがtrueの時のみカウント-->
    
    <div class="w-100 d-flex flex-wrap">
 
   <% @items.each do |item| %> 
   <% if item.sale_status? == true %>
    <div class="w-20 mr-2 mb-2">
    
    <%= link_to item_path(item) do %>
     <div class="card-image-top"><%= image_tag item.get_image(170, 170) %></div>
     <h7 class="card-title"><%= item.name %></h7>
     <p class="card-text">¥<%= item.excluding_tax_price.to_s(:delimited) %></p>
    </div>
    <% end %>
   <% end %>
  <% end %>
    </div>
   </div>
  </div>  
</div>
